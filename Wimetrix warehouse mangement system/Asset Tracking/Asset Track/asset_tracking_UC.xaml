            <DataGrid Background="Transparent" x:Name ="grid_floor_4" IsReadOnly="True" ColumnWidth="*" VerticalScrollBarVisibility="Auto" Margin="10,110,10,10" MouseDoubleClick="Grid_floor_3_MouseClick"/>
            <Label Content="Count:" HorizontalAlignment="Center" Margin="65,60,97,0" VerticalAlignment="Top" FontSize="24" RenderTransformOrigin="0.643,0.852" Width="88"/>
